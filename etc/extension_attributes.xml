<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="spydemon_salesorderexport_exported"
                   type="Spydemon\SalesOrderExport\Model\SpydemonSalesOrderExport">
            <join reference_table="spydemon_sales_order_export"
                  join_on_field="entity_id"
                  reference_field="order_id">
                <field>exported</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
